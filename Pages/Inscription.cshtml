@page "/Inscription"
@model InscriptionModel
@{
    ViewData["Title"] = "Inscription";
    ViewData["Description"] = "Inscription à l'Université de Fianarantsoa";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <p>@ViewData["Description"]</p>
    <label>Choisissez une école :</label>
    <div style="justify-items: center; align-items: center; justify-content: center;">
        <div class="form-group">
            @foreach (var ecole in Model.GetEcoles())
            {
                var lien = ecole.photo;
                <div class="form-check">
                <a href="/inscrire?ecole=@ecole.nom_ecole" class="btn btn-outline-primary m-2" style="display: flex; text-align: center; width: 200px; height: 200px; line-height: 150px; border-radius: 16px; ">
                    <img src="/images/@lien" alt="@ecole.nom_ecole" style="height: 100%; width:100%; border-radius: 8px;">
                </a>
            </div>
            }
        </div>
    </div>
</div>