@page "/inscrire"
@model InscrireModel

@{
    var ecole = Request.Query["ecole"].ToString()!="" ? Request.Query["ecole"].ToString() : "ENI";
    var formulaire = Formulaire.GetForms(Ecole.Get_Id(ecole));
    var parcours = new Ecole(Ecole.Get_Id(ecole),ecole).GetParcours();
    ViewData["Title"] = ecole;
    var lien = ecole + ".png";
}
<img src="~/images/@lien" alt="@ecole" style="height: 80px; margin-left: 10px;" />
<h2>Formulaire d'inscription de @ecole</h2>
<form method="post" style="justify-content: center;">
    <label for="">Nom</label>
    <input type="text" placeholder="Nom de l'étudiant"> <br/><br/>
    <label for="">Prénoms</label>
    <input type="text" placeholder="Prénoms de l'étudiant"> <br/><br/>
    <label for="">Email</label>
    <input type="email" placeholder="Email de l'étudiant"> <br/><br/>
    <label for="">Parcours</label>
    <select name="" id="">
        @for (int i = 0; i < parcours.Count; i++){
            <option value="@parcours[i].id_parcours">@parcours[i].nom_parcours</option>
        }
    </select> <br/><br/>
    @for(int i = 0 ; i < formulaire.Count ; i++){
        string attribut = formulaire[i].attribut;
        string type = formulaire[i].type;
        Console.WriteLine(attribut,type);
        <label for=""> @attribut </label>
        <input type="@type" placeholder="@attribut"> <br /><br />
    }
    <input type="submit" value="S'inscrire" />
</form>